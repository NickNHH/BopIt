<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

<Button
        android:id="@+id/singlePlayerBtn"
        android:layout_width="206dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="130dp"
        android:background="#ff6633"
        android:onClick="playSingleplayer"
        android:text="@string/singleplayer"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/mulitplayerBtn"
        android:layout_width="206dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="#ff6633"
        android:onClick="playMultiplayer"
        android:text="@string/multiplayer"
        android:textColor="#ffffff" />

    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginBottom="153dp"
        android:background="@drawable/roundedbutton"
        android:contentDescription="@string/settingsDesc"
        android:drawableStart="@drawable/icon_settings"
        android:onClick="showSettings"
        android:textColor="#ffffff" />

    <ImageButton
        android:id="@+id/tutorialBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="153dp"
        android:adjustViewBounds="true"
        android:background="@drawable/roundedbutton"
        android:contentDescription="@string/tutorialDesc"
        android:drawableStart="@drawable/icon_settings"
        android:onClick="showTutorial"
        android:scaleType="fitCenter"
        android:textColor="#ffffff" />

</RelativeLayout>
